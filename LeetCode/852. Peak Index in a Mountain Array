class Solution(object):
    def peakIndexInMountainArray(self, A):
        """
        :type A: List[int]
        :rtype: int
        """
        max_val= A[0]
        for i in range(len(A)):
            if  max_val <= A[i]:
                max_val=A[i]
                ind = i
        return ind
                ###################################
                
# could also return A.index(max(A))
