def watering(plants,cap):
    
    steps= 0
    fill= cap
    for idx,plant in enumerate(plants):
        
        if plant <= cap:
            steps+=1
            cap-=plant
            
        else:
            cap=fill
            steps+=(idx*2)+1
            cap-=plant
            
    return steps   
    
    
  # watering([2, 4, 5, 1, 2],6) gives 17
