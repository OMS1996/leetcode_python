# Definition for a binary tree node.

class TreeNode(object):
    def __init__(self, x):
        self.val = x
        self.left = None
        self.right = None

class Solution(object):
    
    def dfs(self, root, res):
        # As long as there is root
        if root:
            # NODE
            res.append(root.val)
            # LEFT
            self.dfs(root.left, res)
            # RIGHT
            self.dfs(root.right, res)
    
    def preorderTraversal(self, root):
        #output
        res = []
        #apply dfs
        self.dfs(root, res)
        # return
        return res

